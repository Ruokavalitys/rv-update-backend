{
  "name": "rv-backend",
  "version": "0.1.0",
  "description": "RV backend",
  "private": true,
  "scripts": {
    "start": "node ./src/server.js",
    "start-nodemon": "nodemon ./src/server.js",
    "db-rollback": "knex migrate:rollback",
    "db-migrate": "knex migrate:latest",
    "db-seed": "knex seed:run",
    "test": "nyc --reporter=lcov mocha --exit",
    "lint-js": "eslint src/**/*.js",
    "fix-js": "eslint --fix src/**/*.js",
    "start-container": "docker-compose build && docker-compose up -d db && docker-compose up -d rv-backend",
    "stop-container": "docker-compose down"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-openapi-validator": "^4.13.8",
    "helmet": "^5.1.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.20.15",
    "pg": "^8.11.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "chai": "^4.4.1",
    "chai-http": "^4.4.0",
    "eslint": "^6.8.0",
    "husky": "^6.0.0",
    "lint-staged": "^9.5.0",
    "mocha": "^9.2.2",
    "nodemon": "^3.0.3",
    "nyc": "^14.1.1",
    "prettier": "^2.8.8",
    "prettier-eslint": "^10.1.1"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint",
      "git add"
    ]
  }
}
