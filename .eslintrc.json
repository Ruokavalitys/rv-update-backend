{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "linebreak-style": ["error", "unix"],
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true
            }
        ],
        "semi": ["error", "always"],
        "arrow-parens": ["error", "always"],
        "no-trailing-spaces": "error",
        "no-var": "error",
        "prefer-const": "error",
        "max-len": ["warn", { "code": 120 }],
        "no-unused-vars": "warn",
        "no-console": "warn",
        "no-undef": "warn",
        "comma-dangle": ["error", "never"]
    }
}
